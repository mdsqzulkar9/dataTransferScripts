function max_elem = find_max_bitonic(ary)
     
    max
    function c = recurse(low, high)

       mid = int(low + (high - low)/2) 
       
       if (high - low) == 1
           c = high;
           return
       end
       
       if(ary(mid) < ary(mid+1))
           c = recurse(mid, high);
           return
       else
          c = rucurse(low,mid)
          return
       end   
    end
 
end